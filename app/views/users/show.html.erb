<%= render 'books/new', book: @nbook, user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to attachment_image_tag(User.find(book.user_id), :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no-image-icon.jpeg"), user_path(book.user_id)%>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      <%= paginate @books %>
            <%#<img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" />%>
    </tbody>
  </table>
</div>

<h2>Book detail</h2>
<table class ='table'>
  <tr>
    <td><%= @book.user_id %></td>
    <td><%= link_to @book.title, book_path(@book) %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか?"}%></td>
    <% end %>
  </tr>
</table>